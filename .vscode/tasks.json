{
    "tasks": [
        {
            "label": "build",
            "type": "cppbuild",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build cpp frontend",
            "type": "cppbuild",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build.sh",
                "-DASTFRI_BUILD_CPP_FRONTEND=ON"
            ],
            "group": {
                "kind": "build"
            }
        },
        
    ],
    "version": "2.0.0"
}